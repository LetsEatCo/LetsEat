{
  "name": "letseat",
  "version": "0.1.0",
  "main": "src/server.ts",
  "scripts": {
    "build": "next build src && mkdir -p build && mv src/.next/ ./build/",
    "clean": "rm -rf ./build && rm -rf ./out && rm -rf ./src/.next",
    "deploy": "now --public",
    "export": "next build src && next export src && mv src/out ./",
    "prettify": "prettier \"./src/**/*.ts\" \"./src/**/*.tsx\" --write",
    "start": "NODE_ENV=production next start build",
    "start:dev": "NODE_ENV=development ts-node -r tsconfig-paths/register src/server.ts",
    "start:test": "NODE_ENV=test yarn test:static",
    "test:static": "tslint --project ./tsconfig.json 'src/**/*.{ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LetsEatCo/LetsEat.git"
  },
  "bugs": {
    "url": "https://github.com/LetsEatCo/LetsEat/issues"
  },
  "homepage": "https://github.com/LetsEatCo/LetsEat#readme",
  "author": "Let's Eat <hello@letseat.co>",
  "license": "GPL-3.0",
  "dependencies": {
    "@rebass/grid": "^6.0.0-4",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "axios": "^0.18.0",
    "config": "^2.0.1",
    "dotenv": "^6.1.0",
    "fontfaceobserver": "^2.0.13",
    "koa": "^2.6.1",
    "koa-router": "^7.4.0",
    "modern-normalize": "^0.5.0",
    "next": "^7.0.2",
    "next-redux-wrapper": "^2.0.0",
    "now-env": "^3.1.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.1",
    "rebass": "^3.0.0-9",
    "redux": "^4.0.1",
    "redux-form": "^7.4.2",
    "redux-observable": "^1.0.0",
    "redux-persist": "^5.10.0",
    "rxjs": "^6.3.3",
    "styled-components": "^4.0.3",
    "styled-components-modifiers": "^1.1.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "universal-cookie": "^3.0.4",
    "universal-cookie-koa": "^3.0.4"
  },
  "devDependencies": {
    "@types/next": "^7.0.3",
    "@types/next-redux-wrapper": "^2.0.0",
    "@types/node": "^10.12.2",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.9",
    "@types/rebass": "^0.3.1",
    "@types/redux": "^3.6.0",
    "@types/redux-form": "^7.4.12",
    "@types/styled-components": "^4.0.3",
    "@types/styled-jsx": "^2.2.7",
    "awesome-typescript-loader": "^5.2.1",
    "babel-plugin-styled-components": "^1.8.0",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "config-webpack": "^1.0.4",
    "husky": "^1.1.3",
    "prettier": "^1.14.3",
    "redux-devtools-extension": "^2.13.5",
    "redux-logger": "^3.0.6",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.8.0",
    "tslint-xo": "^0.9.0",
    "typescript": "^3.1.6",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "docker-compose run app yarn prettify && yarn start:test",
      "pre-push": "docker-compose run app yarn prettify && yarn start:test"
    }
  }
}
